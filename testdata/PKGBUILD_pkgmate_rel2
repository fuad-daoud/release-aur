
#Maintainer:Fuad Daoud <aur@fuad-daoud.com>


pkgname=pkgmate-bin
pkgver=0.1.1
pkgrel=2
pkgdesc="TUI application to manage your dependencies"
arch=('x86_64')
url="https://github.com/fuad-daoud/pkgmate"
source_x86_64=(
"pkgmate-bin-0.1.1-x86_64::https://github.com/fuad-daoud/pkgmate/releases/download/0.1.1/pkgmate-linux-amd64"
"LICENSE::https://raw.githubusercontent.com/fuad-daoud/pkgmate/v0.1.1/LICENSE"
"README::https://raw.githubusercontent.com/fuad-daoud/pkgmate/v0.1.1/README.md"
)
sha256sums_x86_64=('SKIP')

package() {
    if [ "$CARCH" = "x86_64" ]; then
        install -Dm755 "$srcdir/$pkgname-$pkgver-x86_64" "$pkgdir/usr/bin/pkgmate"
    fi
}

